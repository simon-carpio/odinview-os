{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist-electron",
    "rootDir": "./src"
  },
  "include": [
    "src/main/**/*",
    "src/preload/**/*",
    "src/core/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist-electron",
    "src/renderer"
  ]
}